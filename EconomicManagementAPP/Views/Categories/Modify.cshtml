@model Categories

@{
    ViewData["Title"] = "Modify Categories";
}

<h1 class="titlesGen">Modify Categories: @Model.Name</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Modify">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="OperationTypeId" />
    <div class="mb-3 titlesGen">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary titlesGen">Modify</button>
    <a class="btn btn-secondary titlesGen" asp-action="Index">Cancel</a>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
