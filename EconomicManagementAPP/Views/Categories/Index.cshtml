@model IEnumerable<Categories>

@{
    ViewData["Title"] = "Categories";
}


<h1>Categories List</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Create category</a>

<table class="table table-info table-bordered border-dark  text-center">
    <thead class="titles">
        <tr>
            <th>Actions</th>
            <th>Name</th>
            <th>Type Operation</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var categories in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@categories.Id" class="ids" />
                    <a class="btn btn-primary" asp-action="Modify" asp-route-id="@categories.Id">Modify</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@categories.Id">Delete</a>
                </td>

                <td>
                    @categories.Name                   
                </td>
                 <td>
                    @categories.OperationTypeDescription                   
                </td>

            </tr>
        }
       
    </tbody>
</table>

